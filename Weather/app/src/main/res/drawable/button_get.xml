<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color = "#7EC0EE" />
            <stroke android:color="#000080" android:width="2dp" />
            <corners android:radius="100dp" />
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#fff" android:endColor="#ff0000" />
            <stroke android:color="#000080" android:width="2dp" />
            <corners android:radius="100dp" />
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </shape>
    </item>
</selector>